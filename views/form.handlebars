<div class="form_body">

    <div class="login_container_out">
        <div class="login_container">
            <form class="form" id="DocumentUpload" action="/" method="post" enctype="multipart/form-data">
                <h1 class="form__title">Upload File and Data</h1>
                <div class="form__message form__message--error"></div>
                <div class="form__input-group">
                    <label for="document"><b>Upload a file: </b></label>
                    <input type="file" id="document" name="document" accept="image/*,.pdf,.doc,.docx" required>
                    <div class="form__input-error-message"></div>
                </div>
                <div class="form__input-group">
                    <label for="firstName"><b>First Name:</b></label>
                    <input type="text" id="firstName" class="form__input" placeholder="First Name" name="firstName"
                        required>
                    <div class="form__input-error-message"></div>
                </div>
                <div class="form__input-group">
                    <Last for="lastName"><b>Last Name:</b></label>
                    <input type="text" id="lastName" class="form__input" placeholder="Last Name" name="lastName"
                        required>
                    <div class="form__input-error-message"></div>
                </div>
                <div class="form__input-group">
                    <label for="emailAddress"><b>Email Address:</b></label>
                    <input type="email" id="emailAddress" class="form__input" placeholder="Email Address"
                        name="emailAddress" required>
                    <div class="form__input-error-message"></div>
                </div>
                <div class="form__input-group">
                    <label for="phoneNumber"><b>Phone Number:</b></label>
                    <input type="tel" id="phoneNumber" class="form__input" placeholder="XXX-XXX-XXXX" name="phoneNumber"
                        required>
                    <div class="form__input-error-message"></div>
                </div>
                <div class="form__input-group">
                    <label for="gender"><b>Gender</b></label>
                    <select id="gender" class="form__input" name="gender" required>
                        <option value="" disabled selected hidden>Gender</option>
                        <option value="Female">Female</option>
                        <option value="Male">Male</option>
                        <option value="Other">Other</option>
                    </select>
                    <div class="form__input-error-message"></div>
                </div>

                <div>
                    {{#if error}}
                    <p class="not-found">{{error}}</p>
                    {{/if}}
                </div>
                <div>
                    {{#if alert}}
                    <b>Document Uploaded!</b>
                    {{/if}}
                </div>
                <label>
                    <button class="form__button" type="submit">Submit</button>
                </label>
            </form>
        </div>
    </div>
    <script src="/public/js/script.js"></script>
</div>